<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        ALUN - ALUN MALANG
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/alun"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/lown"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        KAMPUNG WARNA WARNI JODIPAN
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/jodipan"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/jod"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        HAWAII WATERPARK
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/hawai"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/haw"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        JATIM PARK
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bale"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/jp2"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/bromo"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/jp3"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        MALANG NIGHT SPECTACULER
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/night"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/night2"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        TAMAN SLAMET
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/slamet"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/slamet2"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        MATOS
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/matos"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/matos2"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
        WISATA RELIGI SONGGORITI
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/songgoriti"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text=""
                    android:background="@drawable/songgoriti2"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/home"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>







</RelativeLayout>